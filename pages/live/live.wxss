@keyframes flower0{
    from {
      transform: translateY(0) translateX(30rpx) rotate(0deg) scale(1);
      opacity: 1;
    }
    100%{
      transform: translateY(-650rpx) translateX(-300rpx)  rotate(100deg) scale(1);
      opacity: 0;
    }
}

