/*********************** 在线成员列表 *************/

.member-scroll {
  width: 100%;
  background-color: white;
  z-index: 6;
  transition: all 0.5s;
  max-height: 0;
  position: relative;
  top:-12rpx;  
  opacity: 0;
  border-top:1rpx solid #f3f3f3;

}
.member-scroll.show{
  opacity: 1;
  max-height: 520rpx;
}
.member-scroll.hide{
  opacity: 0;
  max-height: 0;
}
.member-item {
  width: 20%;
  float: left;
  background-color: white;
}

button.member-item{
  line-height:1.4;
}
button.member-item::after{
  border:none;
}

.member-item-inner {
  background-color: white;
  display: flex;
  flex-flow: column;
  justify-content: space-between;
  align-items: center;
  position: relative;
}
.member-icon-wrapper{
  position: relative;
}
.member-icon {
  padding-top: 20rpx;
  width: 80rpx;
  height: 80rpx;
  /* background-color: #999999; */
  flex-grow: 0;
}
