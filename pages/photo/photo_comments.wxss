.page{
    height: 100%;
}

.bg {
    width: 100%;
    height: 100%;
    position: relative;
    z-index: 2;
}

.default-bg {
    width: 100%;
    height: 100%;
    display: flex;
    justify-content: center;
}

.default-bg-txt {
    margin-top: 200rpx;
    color: #999999;
    text-align:center;
    font-size: 12pt;
}

.comment-item {
    /*width:100%;*/
    padding: 30rpx 20rpx;
    border-bottom: 1px solid #eee;
    display: flex;
    flex-direction: row;
}

.comment-item:nth-child(1) {
    border-top: 1px solid #f4f4f4;
}

.avatar {
    width: 80rpx;
    height: 80rpx;
    margin-right: 10rpx;
    border-radius: 100%;
}

.user-name-txt {
    width: 400rpx;
    line-height: 40rpx;
    font-size: 11pt;
    /* font-weight: bold; */
    color: #999;
    flex-grow: 1;
}

.comment-time-txt {
    width: 220rpx;
    text-align: right;
    line-height: 40rpx;
    font-weight: lighter;
    font-size: 8pt;
    color: #999999;
}

.comment-content {
    line-height: 40rpx;
    width: 620rpx;
    font-size: 11pt;
    color:#333;
}

.comment-bottom {
    width: 100%;
    height: 90rpx;
}


