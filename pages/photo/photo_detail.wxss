}
.bullet-fixed{
  position: fixed;
  bottom: 260rpx;
  text-align: center;
  right: 30rpx;
  z-index: 200;
}
.bullet-fixed-0{
  width: 80rpx;
  height: 80rpx;
  border-radius: 100%;
  position: fixed;
  bottom: 560rpx;
  right: 40rpx;
  z-index: 200;
  /* border:2rpx solid #fff; */
  box-shadow: 0 0 5rpx #333;
}
.bullet-fixed-2{
  position: fixed;
  bottom: 400rpx;
  text-align: center;
  right: 30rpx;
  z-index: 200;
}
.bullet-fixed-3{
  position: fixed;
  bottom: 170rpx;
  text-align: center;
  z-index: 200;
  right: 30rpx;
}
.bullet-fixed-btn{
  width: 100rpx;
  height: 100rpx;
  display: block;
  box-shadow: 0rpx 2rpx 20rpx solid #333;
}

@keyframes pulse {
  from {
    transform: scale3d(1, 1, 1);
  }

  30% {
    transform: scale3d(1.1, 1.1, 1.1);
  }

  to {
    transform: scale3d(1, 1, 1);
  }
}

.bullet-fixed-btn.show{
  animation: pulse 1s;
}

.bullet-fixed-txt{
  font-size: 30rpx;
  color:white;
  text-shadow: 0 0 5rpx #444;
  display: block;
  margin-top: -10rpx;
}
button.send:hover{
