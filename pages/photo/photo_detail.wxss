/* pages/photo/photo_detail.wxss */
page {
    height: 100%;
}
.bg-blur{
  filter: blur(10px);
  width:100%;
  height: 100%;
  top:0;
  position: absolute;
}
.bg {
    width: 100%;
    height: 100%;
    background-color: black;
}

.photo-swiper {
    height: 100%;
    position: relative;
    z-index: 1;
}

.photo {
    width: 100%;
    height: 100%;
}

.index-txt {
    position: fixed;
    bottom: 140rpx;
    left: 50%;
    font-size: 10pt;
    color: white;
    text-shadow: 0 0 5rpx #333;
    display: inline-block;
    width: 100rpx;
    margin-left: -50rpx;
    text-align: center;
    z-index: 10;
}

.bottom-bar {
    position: fixed;
    z-index: 200;
    bottom: 0rpx;
    opacity: 0.8;
    width: 100%;
    height: 110rpx;
    background-color: #222;
    /* border-top:1rpx solid #f3f3f3; */
}


