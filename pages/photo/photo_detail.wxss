/* pages/photo/photo_detail.wxss */
page {
    height: 100%;
}

.bg {
    width: 100%;
    height: 100%;
}

.photo-swiper {
    height: 100%;
}

.photo {
    width: 100%;
    height: 100%;
}

.index-txt {
    position: fixed;
    top: 20rpx;
    right: 20rpx;
    font-size: 10pt;
    color: #999999;
    opacity: 0.6;
}

.bottom-bar {
    position: fixed;
    bottom: 0rpx;
    width: 100%;
    height: 90rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    align-items: center;
}

.bottom-bar-bg {
    position: fixed;
    bottom: 0rpx;
    width: 100%;
    height: 90rpx;
    background-color: white;
    opacity: 0.6;
}

.bottom-btn {
    width: 42rpx;
    height: 42rpx;
}

.msg_dot {
    width: 24rpx;
    height: 24rpx;
    position: absolute;
    top: -4rpx;
    right: 0rpx;
}

.bottom-avatar {
    width: 64rpx;
    height: 64rpx;
    border-radius: 50%;
    margin-left: 12rpx;
}

.bottom-btn-list {
    width: 32rpx;
    height: 28rpx;
    margin-right: 12rpx;
}

.bottom-switch {
}

.bottom-txt-bullet {
    width: 80rpx;
    margin-left: 12rpx;
    line-height: 50rpx;
    font-size: 11pt;
    text-align: center;
    color: white;
    border-radius: 10rpx;
}

.bottom-btn-bullet {
    width: 80rpx;
    margin-left: 12rpx;
    line-height: 50rpx;
    font-size: 11pt;
    text-align: center;
    color: #4bbccc;
    background-color: white;
    border:1rpx solid #4bbccc;
    border-radius: 10rpx;
}

.bottom-txt-edit {
    width: 80rpx;
    margin: 12rpx;
    line-height: 50rpx;
    font-size: 11pt;
    text-align: center;
    color: #999999;
    border-radius: 10rpx;
}

.bottom-txt {
    margin: 12rpx;
    color: #999999;
    font-size: 12pt;
}

.bottom-divider {
    flex-grow: 1;
    display: flex;
    justify-content: center;
    align-items: center;
}

.comment-txt {
    width: 750rpx;
    height: 50rpx;
    position: absolute;
    left: 750rpx;
    font-size: 16pt;
    color: white;
    text-shadow:0px 2px 7px #000;
}

.comment-input {
  width: 100rpx;
  height: 58rpx;
  line-height: 58rpx;
  padding-left: 10rpx;
  padding-right: 10rpx;
  background-color: white;
  font-size:14pt;
  border: 1px solid #f4f4f4; 
  border-radius: 20rpx;
}