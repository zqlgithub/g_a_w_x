/* pages/timeline/timeline.wxss */
page {
    height: 100%;
}

.container {
    width: 100%;
    background-color: #f4f5f9;
}

.loading {
    width: 60rpx;
    height: 60rpx;
    margin: auto;
    margin-top: 20rpx;
}

.search-bar {
    position: fixed;
    width: 100%;
    height: 64rpx;
    background-color: #4bbccc;
    display: flex;
    justify-content: center;
    align-items: center;
}

.search-bar-date {
    width: 200rpx;
    height: 30rpx;
    line-height: 30rpx;
    position: absolute;
    top: 17rpx;
    left: 17rpx;
    color: white;
    font-size: 12pt;
}

.new-photo-btn {
    /*width: 100rpx;*/
    height: 40rpx;
    line-height: 40rpx;
    padding-left: 4rpx;
    padding-right: 4rpx;
    text-align: center;
    position: absolute;
    top: 12rpx;
    left: 17rpx;
    color: red;
    font-size: 10pt;
    border: 2rpx solid red;
    border-radius: 10rpx; 
}

.new-photo-btn-2 {
    /*width: 100rpx;*/
    height: 60rpx;
    line-height: 60rpx;
    padding-left: 4rpx;
    padding-right: 4rpx;
    text-align: center;
    position: fixed;
    right: 30rpx;
    bottom: 160rpx;
    color: white;
    background-color: #e64340;
    font-size: 12pt;
    border-radius: 20rpx; 
}

.contact-btn {
    height: 30rpx;
    position: absolute;
    top: 16rpx;
    right: 16rpx;
}

.search-input-container{
    width:320rpx;
    height: 40rpx;
    border-radius: 20rpx;
    background-color:#2D929F;
    display: flex;
    align-items: center;
}

.search-input {
    margin-left: 16rpx;
    margin-right: 16rpx;
    font-size: 12pt;
    color: white;
}

.search-panel {
    position: fixed;
    top: 64rpx;
    width: 100%;
    background: #f4f4f4;
    z-index: 3;
}

#search-btn {
    width: 48rpx;
    height: 48rpx;
    position: absolute;
    top: 20rpx;
    right: 20rpx;
}

.search-panel-item {
    width: 100%;
    height: 100rpx;
    margin-top: 30rpx;
}

.search-panel-title {
    color: #999999;
}

.search-panel-date-btn {
    width: 100rpx;
    height: 48rpx;
    margin-right: 10rpx;
    border: 1px solid #999999;
    border-radius: 20rpx;
    display: flex;
    align-items: center;
}

.search-panel-date-txt {
    width: 100rpx;
    height: 30rpx;
    line-height: 30rpx;
    color: #999999;
    font-size: 12pt;
    text-align: center;
}

.search-panel-date-container{
    display: flex;
    flex-flow: row nowrap; 
}

.search-panel-month-container {
    width: 100%;
    display: flex;
    flex-flow: row wrap;
}

.search-panel-day-container {
    width: 100%;
    display: flex;
    flex-flow: row wrap;
}

.search-panel-date-scroll {
    width: 100%;
    margin-top: 20rpx;
}

.album-scroll {
    width: 100%;
    background-color: #f4f5f9;
}

.default-bg {
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.default-img {
    height:214rpx;
    width:345rpx;
    margin-top: 200rpx;
}

.default-title {
    margin-top: 20rpx;
    color: #999999;
    text-align:center;
    font-size: 12pt;
}

.create-panel {
    position: fixed;
    bottom: -455rpx;
    width: 100%;
    height: 455rpx;
    background-color: #f4f4f4;
    display: flex;
    flex-flow: column wrap;
    align-items: center;
    z-index: 2;
}

.submit {
    width: 100%;
    display: flex;
    flex-flow: row wrap;
    align-items: center;
}

.input-form {
    width: 100%;
    margin-top: 20rpx;
    background-color: white;
}

.album-input {
    font-size: 14pt;
    margin-top: 16rpx;
    margin-left: 20rpx;
    margin-bottom: 16rpx;
}

#album-name-txt {
    width: 85rpx;
}

#panel-confirm-btn {
    width: 710rpx;
    margin-top: 32rpx;
    color: white;
    background-color: #4bbccc;
}

#panel-cancel {
    margin-top: 50rpx;
}



#trash-btn {
    position: fixed;
    left: 132rpx;
    bottom: 120rpx;
    width: 64rpx;
    height: 64rpx;
}

.timeline-container {
    width: 100%;
    display: flex;
    flex-flow: column nowrap;
    justify-content: flex-start;
    align-items: flex-start;
}

.album {
    width: 100%;
    margin-bottom: 12rpx;
    margin-top: 16rpx;
}


.album-banner {
    width: 100%;
    display: flex;
    flex-flow: row nowrap;
    justify-content: space-between;
    align-items: center;
}

.album-txt {
    width: 690rpx;
    margin-left: 10rpx;
    color: black;
    font-size: 12pt;
}

#album-date {
    width: 230rpx;
}

#album-title {
    width: 500rpx;
}

.remove-album-btn {
    width: 45rpx;
    height: 45rpx;
    margin-right: 10rpx;
}

.photo-container {
    width: 100%;
    margin-top: 10rpx;
    display: flex;
    flex-wrap: wrap;
}

.photo {
    background-color: white;
    width: 183rpx;
    height: 183rpx;
    margin-right: 6rpx;
    margin-bottom: 6rpx;
}

.photo:nth-child(4n+0){
    margin-right: 0rpx;
}

.photo-img {
    width: 183rpx;
    height: 183rpx;
}

.photo-top {
    width: 40rpx;
    height: 40rpx;
    position: absolute;
    left: 0rpx;
    top: 0rpx;
}

.photo-new {
    width: 80rpx;
    height: 80rpx;
    position: absolute;
    right: 0rpx;
    top: -20rpx;
}

.photo-dot {
    width: 24rpx;
    height: 24rpx;
    position: absolute;
    right: 0rpx;
    top: 0rpx;
}

.creator-avatar {
    width: 40rpx;
    height: 40rpx;
    position: absolute;
    left: 10rpx;
    bottom: 10rpx;
    border-radius: 50%;
}

.select-frame {
    width: 40rpx;
    height: 40rpx;
    background-color: white;
    border: 5rpx solid #4bbccc;
    border-radius: 50%;
    position: absolute;
    right: 0rpx;
    bottom: 0rpx;
}

.select-icon {
    position: absolute;
    right: 0rpx;
    bottom: 0rpx;
}

#add-photo-btn {
    color: #999999;
    opacity: 0.8;
    display: flex;
    justify-content: center;
    align-items: center;
}


.bottom-navigator {
    position: fixed;
    bottom: 0rpx;
    width: 100%;
    height: 95rpx;
    border-top-style: solid;
    border-top-color: #cdcdcd;
    border-top-width: 1rpx;
    background-color: #f4f4f4;
    display: flex;
    justify-content: space-between;
    align-items: flex-end;
}

.bottom-btn {
    width: 90rpx;
    height: 90rpx;
    flex-grow: 1;
    margin: 2rpx;
    display: flex;
    flex-flow: column nowrap;
    justify-content: center;
    align-items: center;
}   

.bottom-btn-img {
    width: 40rpx;
    height: 40rpx;
}

.bottom_create_btn {
    width: 110rpx;
    height: 110rpx;
}

.bottom-btn-txt { 
    margin-top: 8rpx;
    font-size: 10pt;
}



.edit-panel {
    position: fixed;
    bottom: -120rpx;
    width: 100%;
    height: 120rpx;
    border-top-style: solid;
    border-top-color: #cdcdcd;
    border-top-width: 1rpx;
    background-color: #f4f4f4;
    display: flex;
    flex-flow: column wrap;
    align-items: center;
    z-index: 2;
}

.edit-btn {
    width: 150rpx;
    height: 110rpx;
    flex-grow: 1;
    margin: 2rpx;
    display: flex;
    flex-flow: column nowrap;
    justify-content: center;
    align-items: center;
}

.edit-btn-img {
    width: 46rpx;
    height: 46rpx;
}

.edit-btn-txt {
    margin-top: 14rpx;
    font-size: 10pt;
}

.edit-btn-cancel {
    width: 50rpx;
    height: 50rpx;
}

.photo-detail-container {
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    background-color: black;
    z-index: 3;
}

.photo-detail {
    width: 100%;
    height: 100%;
    background: black;
}

.single-photo {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
}

.bottom-bar {
    position: fixed;
    bottom: 0rpx;
    width: 100%;
    height: 90rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.creator-icon {
    width: 60rpx;
    height: 60rpx;
    margin-left: 20rpx;
    border-radius: 50%;
    flex-grow: 0;
}

.creator-name-txt {
    margin-left: 20rpx;
    font-size: 14pt;
    color: white;
    flex-grow: 1;
}

.remove-btn {
    width: 50rpx;
    height: 50rpx;
    margin-right: 20rpx;
    flex-grow: 0;
}