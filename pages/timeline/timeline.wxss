/* pages/timeline/timeline.wxss */
page {
    height: 100%;
}

.container {
    width: 100%;
    background-color: #f4f5f9;
}

.loading {
    width: 60rpx;
    height: 60rpx;
    margin: auto;
    margin-top: 20rpx;
}

.search-bar {
    width: 100%;
    padding: 20rpx 0 5rpx 20rpx;
    background-color: #4bbccc;
    display: flex;
    flex-direction: row;
}
.search-bar-right{
  /* margin:10rpx  30rpx; */
  flex-basis: 100rpx;
  text-align: right;
  padding-right: 20rpx;
}
.search-bar-right image{
  width: 50rpx;
  margin:5rpx 10rpx;
  height: 50rpx;
}
.search-bar-date {
    /* height: 30rpx;*/
    line-height: 40rpx;
    padding: 10rpx;
    
    background-color: #006670;
    color: white;
    font-size: 30rpx;
    border-radius: 20rpx 0 0 20rpx;
    position: relative;
    left:-8rpx;
    float: left;
    margin: 0 10rpx;
}

.not-found-tips{
  color:#999;
  text-align: center;
  margin: 30rpx;
}
.new-photo-btn {
    /*width: 100rpx;*/
    height: 40rpx;
    line-height: 40rpx;
    padding-left: 4rpx;
    padding-right: 4rpx;
    text-align: center;
    position: absolute;
    top: 12rpx;
    left: 17rpx;
    color: red;
    font-size: 10pt;
    border: 2rpx solid red;
    border-radius: 10rpx; 
}

.new-photo-btn-2 {
    /*width: 100rpx;*/
    height: 60rpx;
    line-height: 60rpx;
    padding-left: 4rpx;
    padding-right: 4rpx;
    text-align: center;
    position: fixed;
    right: 30rpx;
    bottom: 160rpx;
    color: white;
    background-color: #e64340;
    font-size: 12pt;
    border-radius: 20rpx; 
}

.contact-btn {
    height: 30rpx;
    position: absolute;
    top: 16rpx;
    right: 16rpx;
}

.search-input-container{
    width:100%;
    height: 60rpx;
    /* padding: 10rpx; */
    border-radius: 20rpx;
    background-color:#2D929F;
    align-items: center;
    transition: all 0.5s;
}

.search-input {
    margin-left: 16rpx;
    margin-right: 16rpx;
    padding: 10rpx;
    font-size: 30rpx;
    position: relative;
    top:-3rpx;
    color: white;
}

.search-panel {
    position: fixed;
    top: 102rpx;
    width: 100%;
    background: #f4f4f4;
    z-index: 3;
}

#search-btn {
    width: 48rpx;
    height: 48rpx;
    position: absolute;
    top: 20rpx;
    right: 20rpx;
}

.search-panel-item {
    width: 100%;
    height: 100rpx;
    margin-top: 30rpx;
}

.search-panel-title {
  text-align: center;
  display: block;
    color: #999999;
}

.search-panel-date-btn {
    width: 100rpx;
    height: 48rpx;
    margin-right: 10rpx;
    border: 1px solid #999999;
    border-radius: 20rpx;
    display: flex;
    align-items: center;
}

.search-panel-date-txt {
    width: 100rpx;
    height: 30rpx;
    line-height: 30rpx;
    color: #999999;
    font-size: 12pt;
    text-align: center;
}

.search-panel-date-container{
    display: flex;
    flex-flow: row nowrap; 
}

.search-panel-month-container {
    width: 100%;
    display: flex;
    flex-flow: row wrap;
}

.search-panel-day-container {
    width: 100%;
    display: flex;
    flex-flow: row wrap;
}

.search-panel-date-scroll {
    width: 100%;
    margin-top: 20rpx;
}

.album-scroll {
    width: 100%;
    background-color: #f4f5f9;
}

.default-bg {
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.default-img {
    height:214rpx;
    width:345rpx;
    margin-top: 200rpx;
}

.default-title {
    margin-top: 20rpx;
    color: #999999;
    text-align:center;
    font-size: 12pt;
}

.create-panel {
    position: fixed;
    bottom: -455rpx;
    width: 100%;
    height: 455rpx;
    background-color: #f4f4f4;
    display: flex;
    flex-flow: column wrap;
    align-items: center;
    z-index: 2;
}

.submit {
    width: 100%;
    display: flex;
    flex-flow: row wrap;
    align-items: center;
}

.input-form {
    width: 100%;
    margin-top: 20rpx;
    background-color: white;
}

.album-input {
    font-size: 14pt;
    margin-top: 16rpx;
    margin-left: 20rpx;
    margin-bottom: 16rpx;
}

#album-name-txt {
    width: 85rpx;
}

#panel-confirm-btn {
    width: 710rpx;
    margin-top: 32rpx;
    color: white;
    background-color: #4bbccc;
}

#panel-cancel {
    margin-top: 50rpx;
}



#trash-btn {
    position: fixed;
    left: 132rpx;
    bottom: 120rpx;
    width: 64rpx;
    height: 64rpx;
}

.timeline-container {
    width: 100%;
    display: flex;
    flex-flow: column nowrap;
    justify-content: flex-start;
    align-items: flex-start;
}

.album {
    width: 100%;
    margin-bottom: 12rpx;
    margin-top: 16rpx;
}


.album-banner {
    width: 100%;
    display: flex;
    flex-flow: row nowrap;
    justify-content: space-between;
    align-items: center;
}

.album-txt {
    width: 690rpx;
    margin-left: 10rpx;
    color: black;
    font-size: 12pt;
}

#album-date {
    width: 230rpx;
}

#album-title {
    width: 500rpx;
}

.remove-album-btn {
    width: 45rpx;
    height: 45rpx;
    margin-right: 10rpx;
}

.photo-container {
    width: 100%;
    margin-top: 10rpx;
    display: flex;
    flex-wrap: wrap;
}

.photo {
    background-color: white;
    width: 183rpx;
    height: 183rpx;
    margin-right: 6rpx;
    margin-bottom: 6rpx;
}

.photo:nth-child(4n+0){
    margin-right: 0rpx;
}

.photo-img {
    width: 183rpx;
    height: 183rpx;
}

.photo-top {
    width: 40rpx;
    height: 40rpx;
    position: absolute;
    left: 0rpx;
    top: 0rpx;
}

.photo-loading {
  color: white;
  position: absolute;
  right: 0rpx;
  bottom: 0rpx;
  font-size: 10pt;
}

.photo-new {
    width: 80rpx;
    height: 80rpx;
    position: absolute;
    right: 0rpx;
    top: 0rpx;
}

.photo-dot {
    width: 28rpx;
    height: 28rpx;
    position: absolute;
    right: 10rpx;
    top: 10rpx;
}

.creator-avatar {
    width: 40rpx;
    height: 40rpx;
    position: absolute;
    left: 5rpx;
    bottom: 5rpx;
    border-radius: 50%;
}

.select-frame {
    width: 40rpx;
    height: 40rpx;
    background-color: white;
    border: 5rpx solid #4bbccc;
    border-radius: 50%;
    position: absolute;
    right: 0rpx;
    bottom: 0rpx;
}

.select-icon {
    position: absolute;
    right: 0rpx;
    bottom: 0rpx;
}
image.select-icon{
  width: 48rpx;
  height: 48rpx;
}

#add-photo-btn {
    color: #999999;
    opacity: 0.8;
    display: flex;
    justify-content: center;
    align-items: center;
}


.bottom-navigator {
    position: fixed;
    bottom: 0rpx;
    width: 100%;
    height: 85rpx;
    box-shadow: 0 -1rpx 3rpx #eee;
    /* border-top-style: solid;
    border-top-color: #cdcdcd;
    border-top-width: 1rpx; */
    background-color: #fff;
    display: flex;
    justify-content: space-between;
    align-items: flex-end;
}

.bottom-btn {
    width: 80rpx;
    height: 80rpx;
    flex-grow: 1;
    margin: 2rpx;
    display: flex;
    flex-flow: row nowrap;
    justify-content: center;
    align-items: center;
}   

.bottom-btn-img {
    width: 50rpx;
    height: 50rpx;
    margin:0 15rpx;
}

.bottom_create_btn {
    width: 110rpx;
    height: 110rpx;
    position: relative;
    top:-20rpx;
    z-index: 100;
}

.bottom-btn-txt { 
    margin-top: 8rpx;
    font-size: 10pt;
}



.edit-panel {
    position: fixed;
    bottom: -140rpx;
    width: 100%;
    height: 140rpx;
    box-shadow: 0 -1rpx 3rpx #eee;
    background-color: white;
    display: flex;
    flex-flow: column wrap;
    align-items: center;
    z-index: 2;
}

.edit-btn {
    width: 150rpx;
    height: 110rpx;
    flex-grow: 1;
    margin: 2rpx;
    display: flex;
    flex-flow: column nowrap;
    justify-content: center;
    align-items: center;
}

.edit-btn-img {
    width: 60rpx;
    height: 60rpx;
}
.edit-btn-close{
  width: 30rpx;
  height: 30rpx;
}

.edit-btn-txt {
    margin-top: 14rpx;
    font-size: 10pt;
}

.edit-btn-cancel {
    width: 50rpx;
    height: 50rpx;
}

.photo-detail-container {
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    background-color: black;
    z-index: 3;
}

.photo-detail {
    width: 100%;
    height: 100%;
    background: black;
}

.single-photo {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
}

.bottom-bar {
    position: fixed;
    bottom: 0rpx;
    width: 100%;
    height: 90rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.creator-icon {
    width: 60rpx;
    height: 60rpx;
    margin-left: 20rpx;
    border-radius: 50%;
