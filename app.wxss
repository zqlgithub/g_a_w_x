/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 0 0;
  box-sizing: border-box;
} 

.mask{
  position: fixed;
  top:0;
  left:0;
  right: 0;
  bottom: 0;
  transform: translateY(100%);
  background-color: rgba(0,0,0,0.4);
  z-index: 5;
}

.mask.show{
  transform: translateY(0);
  animation: mask-show 0.5s forwards;
}
.mask.hide{
  
  animation: mask-hide 0.5s forwards;
}
@keyframes mask-show{
  0%{
    opacity: 0;
    transform: translateY(0);
  }
  
  100% {
    transform: translateY(0);
    opacity: 1
  }
}

@keyframes mask-hide{
  0%{
    opacity: 1;
    transform: translateY(0);
  }
  99%{
    transform: translateY(0);
  }
  100% {
    transform: translateY(100%);
    opacity: 0
  }
}